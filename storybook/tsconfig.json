{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "@root/*": ["src/*"],
      "@stories/*": ["src/stories/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "esnext"
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "declaration.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mdx",
    "../components/**/*.d.ts"
  ]
}
